_connect() 
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    accounts=`cat ~/.connect.d/known_accounts | awk '/.*/ {print $1;}' | tr " " "\n"`
    opts="add del mod "$accounts

    if [[ ${cur} == * ]] ; then
        COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
        return 0
    fi
}
complete -F _connect connect